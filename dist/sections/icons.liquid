<section class="icons row">
  {% for block in section.blocks %}
    <div class="col-xs-6 col-sm-4">
      <div class="icons_icon">
        <img src="{{ block.settings.image | img_url : 'master' }}" alt="{{ block.settings.image.alt }}">
        <h3>{{ block.settings.title }}</h3>
        {{ block.settings.text }}
      </div>
    </div>
  {% endfor %}
</section>
{% schema %}
{
  "name": "Icons",
  "settings": [

  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titre"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Texte"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Picto"
        }
      ]
    }
  ]
}
{% endschema %}
