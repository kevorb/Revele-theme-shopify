  .header_large { display:none; }


  /* footer */
  footer .footer_bottom .footer_right { margin-top: 50px; }
  footer .footer_bottom .footer_right .footer_newsletter { margin: auto;}
  footer .footer_bottom .footer_left .footer_menu { width: 50%; }
  header .site-header__icons-wrapper {
    a, .btn--link { color: $black; }
    .btn--link.site-header__icon.site-header__menu {
      position: relative;
      bottom:4px;
      color:$black;
    }
