          @include size_m;
          background: $white;
          color: $black;
          @include gobold;
          font-weight: 100;
          padding: 0;
        }
        #Email {
          width: 100px;
          -ms-flex-preferred-size: inherit;
          -webkit-flex-basis: inherit;
          -moz-flex-basis: inherit;
          flex-basis: inherit;
          border: 1px solid $white;
          border-right: 1px solid $black;
          padding-left: 10px;
        }
        .form-message.form-message--success {
          color:$black;
          text-align: center;
        }
        button.newsletter__submit {
          width: 100px;
        }
        p {
          color:$white;
          @include gobold;
        }
        .icon {
          width: 42px;
          margin-top: 25px;
          height: 42px;
          color:$white;
        }
      }
    }
  }
}


