/********************************
			COLOR
*********************************/

$black:#000;
$white:#ffffff;
$grey:grey;
$red:#cf3027;

$specialBlue:#8cd7f8;
$specialRed:#ed2b4a;

/********************************
			FONTS
*********************************/

@mixin gobold {font-family: "Gobold_Bold";}
@mixin gobold_ita {font-family: "Gobold_Bold_Italic";}
@mixin titi {font-family: "TitilliumWeb";}

@mixin size_xxs { font-size: 8px; }
@mixin size_xs { font-size: 10px; }
@mixin size_s { font-size: 14px; }
@mixin size_m { font-size: 16px; }
@mixin size_ml { font-size: 20px; }
@mixin size_mxl { font-size: 18pt; }
@mixin size_l { font-size: 26px; }
@mixin size_xl { font-size: 32px; }
@mixin size_xxl { font-size: 42px; }
@mixin size_xxxsl { font-size: 56px;}
@mixin size_xxxl { font-size: 70px; }


/********************************
			GENERAL
*********************************/

$header_icon_size:25px;

h1, h2, h3, h4, h5  {
  color:$black;
  line-height: inherit;
  letter-spacing: inherit;
  font-weight: inherit;
}

h1 { @include size_xxxl;@include gobold_ita; }
h2 { @include size_xxl;@include gobold_ita; }
h3 { @include size_xl;@include gobold_ita; }
h4 { @include size_xl;@include gobold; }
h5 { @include size_m;@include gobold; }

@media all and (max-width:767px) {
  h1 { @include size_xl; }
  h2 { @include size_l; }
  h3 { @include size_ml; }
  h4 { @include size_ml; }
  h5 { @include size_s; }
}

p {@include titi;color:$black;}

a:hover, a:focus {
    color: inherit;
    text-decoration: none;
}

textarea, input, button, .btn, .shopify-payment-button .shopify-payment-button__button--unbranded {
  border-radius: 0 !important;
}

textarea, input, button { outline: none; }

.relative { position:relative; }
.absolute { position: absolute; }

.flex { display:flex;}

.img-cover { object-fit: cover; }

.heightOfParent { overflow: hidden;}

.little-margin-top { margin-top: 30px; }

.display_none { display:none; }

.cta {
  @include size_xl;
  background: $white;
  color: black;
  @include gobold_ita;
  border: 4px solid black;
  padding: 3px 12px 3px 8px;
  animation: .2s;
  &:hover {
    background: $black;
    color: $white;
//    font-size: 34px;
  }
}

@media only screen and (min-width: 750px) {
  .page-container {
    -ms-transform: none;
    -webkit-transform: none;
    transform: none;
  }
}

/********************************
			HEADER
*********************************/

#shopify-section-header {
  #CartCount {
    display: none;
  }
  div[data-section-id="header"] {
    display:none;
  }
  .header_large {
    padding: 40px 30px 20px;
    @include gobold;
    .header_mini {
      display: flex;
      .menu_left {
        width: 300px;
      }
      .menu_center {
        width: calc(100% - 600px);
        text-align: center;
        line-height: 65px;
        .item_menu {
          display: inline;
          color: $black;
          @include size_mxl;
          padding: 0 32px;
          &:hover { color:$grey; }
        }
      }
      .menu_right {
        width: 300px;
        text-align: right;
        line-height: 65px;
        a {
          color:$black;
          svg, .fa, .fas, .far {
            height: $header_icon_size;
            width: $header_icon_size;
            font-size: $header_icon_size;
            margin-left: 10px;
          }
        }
      }
    }
  }
}

/********************************
      FOOTER
********************************/

footer {
  background:$black;
  color:$white;
  padding: 30px;
  margin-top: 30px;
  .footer_top {
    max-width: 45%;
    padding-bottom: 85px;
    img {
      width: 100%;
      max-width: 420px;
      min-width: 230px;
    }
  }
  .footer_bottom {
    padding: 0 15px;
    .footer_left {
      text-align: left;
      display: flex;
      .footer_menu {
