/********************************
			COLOR
*********************************/

$black:#000;
$white:#ffffff;

/********************************
			FONTS
*********************************/

@mixin gobold {font-family: "Gobold_Bold";}
@mixin gobold_ita {font-family: "Gobold_Bold";}

@mixin size_s { font-size: 12px; }
@mixin size_m { font-size: 16px; }
@mixin size_l { font-size: 22px; }


/********************************
			GENERAL
*********************************/

button, .btn {
  border:1px solid white;
}

textarea, input, button, .btn, .shopify-payment-button .shopify-payment-button__button--unbranded {
  border-radius: 0 !important;
}

textarea, input, button { outline: none; }

.underline_a a { border-bottom: 1px solid; }


/********************************
			HEADER
*********************************/

#shopify-section-header {
  div[data-section-id="header"] {
    display:none;
  }
  .header_large {
    padding: 40px 15px 20px;
    @include gobold;
    .header_mini {
      display: flex;
      .menu_left {
        width: 300px;
      }
      .menu_center {
        width: calc(100% - 600px);
        text-align: center;
        line-height: 81px;
        .item_menu {
          display: inline;
          color: $black;
          @include size_l;
          padding: 0 5px;
        }
      }
      .menu_right {
        width: 300px;
      }
    }
  }
}

/********************************
      FOOTER
********************************/

footer {
  background:$black;
  color:$white;
  padding: 30px;
  .footer_top {
    max-width: 45%;
    img {
      width: 100%;
    }
  }
  .footer_bottom {
    display: flex;
    .footer_left {
      text-align: left;
      width: 50%;
      display: flex;
      .footer_menu {
        width: 40%;
        .footer_linklist {
          .footer_linklist-item {
            margin-top: 5px;
            a {
              color:$white;
              @include gobold;
              text-transform: uppercase;
              @include size_s;
            }
          }
        }
      }
    }
    .footer_right {
      text-align: right;
      width: 50%;
      .footer_newsletter {
        width: 219px;
        text-align: right;
        margin-right: 0;
        margin-left: auto;
        .footer_subheading {
          margin-bottom: 10px;
          @include size_s;
        }
        #Email, button.newsletter__submit  {
          min-height: 38px;
          @include size_s;
          background: $white;
          color: $black;
          @include gobold;
          font-weight: 100;
          padding: 0;
        }
        #Email {
          width: 100px;
          -ms-flex-preferred-size: inherit;
          -webkit-flex-basis: inherit;
          -moz-flex-basis: inherit;
          flex-basis: inherit;
          border: 1px solid $white;
          border-right: 1px solid $black;
          padding-left: 10px;
        }
        .form-message.form-message--success {
          color:$black;
          text-align: center;
        }
        button.newsletter__submit {
          width: 90px;
        }
        p {
          color:$white;
          @include gobold;
        }
        .icon {
          width: 42px;
          margin-top: 25px;
          height: 42px;
          color:$white;
        }
      }
    }
  }
}

/********************************
			MEDIA QUERIES
*********************************/

@media all and (max-width:767px) {
  #shopify-section-header div[data-section-id="header"] {
    display:block;
  }
  .header_large {
    display:none;
  }
}
