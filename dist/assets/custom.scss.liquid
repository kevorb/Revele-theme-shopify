/********************************
			PRODUCT PAGE
*********************************/

.product_page {
  .container-fluid {
    padding-left: 35px;
    padding-right: 35px;
    .product_details {
      h1 {
        @include size_xl;
        text-transform: uppercase;
      }
      h2 {
        @include size_l;
        margin-top: 20px;
        span {
          color: $black;
          padding-left: 20px;
          font-weight: 100;
        }
      }
      .product-form {
        #AddToCart-product-new-template {
          background: $black;
          color: $white;
          @include gobold;
          text-transform: uppercase;
          font-weight: 100;
          @include size_m;
          width: 90%;
          margin:auto;
        }
        .selector-wrapper.js.product-form__item {
          display: none;
        }
        .swatch {
          .header {
            text-align: center;
            margin-top: 30px;
            h4 { @include size_l; }
            h5 {
              color:$grey;
              @include titi;

            }
          }
        }
        .swatch.clearfix {
          width: 100%;
          text-align: center;
          .swatch-element {
            margin:auto;
            width: 50px;
            height: 50px;
            &.selected {
              label {
                background: $black;
                color:$white;
                border-color: $black;
              }
            }
            label {
              width: 50px;
              height: 50px !Important;
              line-height: 50px !Important;
              padding:0;
              margin: 25px 0;
              @include size_m;
              border-radius: 0;
              box-shadow: none;
              background: $white;
              border: 2px solid $black;
            }
          }
        }
      }
      .product-single__description {
        color: $black;
        .real_description {
          margin-top: 30px;
          p span { display: block; overflow: hidden; }
        }
        .product_picto {
          margin-top: 20px;
          .product-metafields-pictos {
            text-align: center;
            img {
              max-width: 75px;
            }
            h6 {
              margin: 0;
              text-align: center;
            }
          }
        }
      }
    }
  }
  .product_metafields {
    .product_metafield {
  	h4 {
       text-transform:uppercase;
       text-align: center;
        font-weight:100;
        @include size_ml;
        cursor:pointer;
        border-top:1px solid;
        padding:22px 0;
        margin:0;
        span {
          transition:.2s;
          display:block;
          float:right;
          margin-right:10px;
          &.rotate {
            -webkit-transform: rotate(135deg);     /* Chrome and other webkit browsers */
            -moz-transform: rotate(135deg);        /* FF */
            -o-transform: rotate(135deg);          /* Opera */
            -ms-transform: rotate(135deg);         /* IE9 */
            transform: rotate(135deg);
            -webkit-transform: rotate(135deg);
            -moz-transform: rotate(135deg);
            filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
          }
        }
      }
      p {
        display:none;
        padding: 5px 0;
        margin-top: 10px;
        color: $black;
        margin-bottom:35px;
        @include size_s;
      }
      &:first-child {
        h4 {
          border-top:0;
        }
      }
    }
  }
  .product-special-swatch {
    margin-bottom: 30px;
    margin-top: -10px;
    .red { color:$red; }
    .product-special-swatch-revelia {
      margin-bottom: 30px;
      margin-top: 15px;
      cursor: pointer;
      &.active { border:3px solid $black;}
    }
    .product-special-swatch-color {
      height:30px;
      width: 30px;
      border-radius: 100%;
      cursor: pointer;
      &.colorRed {
        background: $specialRed;
        margin-left: 30px;
      }
      &.colorBlue {
        background: $specialBlue;
      }
    }
  }
}
