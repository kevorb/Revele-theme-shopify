    .product_price { @include size_xxs; }
  }
  .collection_new .collection_container { width: auto !important;
    .product_info { @include size_xs }
  }

  /* footer newsletter */
  .section_footer_newsletter {
    padding:60px 0 30px;
    h3 { left: -90px; margin-bottom: 4px; }
    h4 {
      letter-spacing: 12px;
      margin-bottom: 20px;
      span.exclam {
        left: 16px;
        top: 7px;
      }
    }
    h5 { margin-top: 5px;}
    #contact_form {
      max-width: 270px;
      #Email { width: 180px; }
    }
  }

  /* page how it works */
  .page_howitworks .content section.video_container .video-button {
    width: 75px;
    height: 75px;
    margin-left: -37.5px;
    svg {
      top: 13px;
      width: 23px;
      left: 30px;
    }
  }
